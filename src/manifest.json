{
    "manifest_version": 2,

    "name": "Simple Proxy",
    "description": "This extension can set up proxy for each host you have visited.",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html",
        "default_title": "Proxy"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "options_page": "options.html",
    "permissions": [
        "proxy",
        "tabs",
        "storage",
        "webRequest",
        "webNavigation",
        "http://*/*",
        "https://*/*"
    ]
}
